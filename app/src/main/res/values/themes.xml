<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Miaudota" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimary</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="my_dialog_theme" parent="ThemeOverlay.AppCompat.Dialog">
        <item name="colorAccent">@color/colorPrimary
        </item>                   <!--header background-->
        <item name="android:windowBackground">@color/mainBackground
        </item>     <!--calendar background-->
        <item name="android:colorControlActivated">@color/colorPrimary</item> <!--selected day-->
        <item name="android:textColorPrimary">@color/white</item> <!--days of the month-->
        <item name="android:textColorSecondary">@color/colorPrimary
        </item>    <!--days of the week-->
    </style>

    <style name="dialog_theme" parent="ThemeOverlay.AppCompat.Dialog">
        <item name="backgroundTint">@color/bluecachorro</item>
    </style>

    <style name="btn_zap" parent="ThemeOverlay.AppCompat.Dialog">
        <item name="backgroundTint">@color/zipzop</item>
    </style>

    <style name="ExposedDropdownMenu" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">
        <item name="boxStrokeColor">#fff</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="android:textColorHint">#fff</item>
    </style>

    <style name="Theme.Miaudota.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Miaudota.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Miaudota.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>